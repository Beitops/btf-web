---
import ReviewsBar from "../widgets/ReviewsBar.astro";
import Comparador from "./Comparador.astro";

interface Props {
	title: string;
	subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<section class="bg-primary pt-16 pb-56 px-6">
	<div class="max-w-4xl mx-auto text-center">
		<h1 class="text-4xl md:text-5xl font-bold leading-tight mb-6" set:html={title} />
		<h2 class="text-base md:text-lg text-gray-800 mb-12" set:html={subtitle} />
	</div>
</section>

<div class="px-6 -mt-55 relative z-10 pb-16">
	<div class="max-w-3xl mx-auto">
		<Comparador />
		<div class="mt-6 flex justify-center">
			<ReviewsBar />
		</div>
	</div>
</div>
